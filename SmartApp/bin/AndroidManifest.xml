<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devstream.smartapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/settings"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.SmartMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".activity.SmartLandingPageActivity" >  
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activity.SmartMainActivity"/>
        </activity>
        <activity
            android:name=".activity.SmartServiceOptionActivity" > 
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".activity.SmartLandingPageActivity"/>
        </activity>
    </application>

</manifest>
